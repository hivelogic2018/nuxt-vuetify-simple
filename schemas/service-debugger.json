{
	"sections": [
		{
			"type": "FORM",
			"title": "Create Career Goal Tracker",
			"data": {
				"goalType": "",
				"name": "",
				"notes": "",
				"reminder": false
			},
			"structure": {
				"schema": [
					{
						"$formkit": "text",
						"name": "name",
						"label": "Name",
						"placeholder": "Your Name",
						"validation": "nameRule|required"
					},
					{
						"$formkit": "select",
						"name": "goalType",
						"label": "Goal Type",
						"options": ["Career Switch", "Promotion", "Skill-building"],
						"placeholder": "Select the primary driver for this goal.",
						"validation": "required"
					},
					{
						"$formkit": "textarea",
						"name": "notes",
						"label": "Notes",
						"placeholder": "Optional"
					},
					{
						"$formkit": "checkbox",
						"name": "reminder",
						"label": "Set a reminder (Optional)"
					}
				]
			},
			"onSubmit": {
				"loadAction": {
					"type": "xhr",
					"method": "POST",
					"url": "/api/submit-goal",
					"onSuccess": {
						"successHandler": "sectionSuccessHandler",
						"targetDataStore": "goalResponse"
					},
					"onFailure": {
						"failureHandler": "sectionFailureHandler"
					}
				}
			}
		},
		{
			"type": "FORM",
			"title": "Feedback Form",
			"data": { "feedback": "", "rating": "" },
			"structure": {
				"schema": [
					{
						"$formkit": "textarea",
						"name": "feedback",
						"label": "Your Feedback",
						"validation": "required|length:10",
						"validationMessages": {
							"required": "Feedback is required.",
							"length": "Please provide at least 10 characters of feedback."
						}
					},
					{
						"$formkit": "radio",
						"name": "rating",
						"label": "Rating",
						"options": ["Good", "Average", "Poor"],
						"validation": "required",
						"validationMessages": {
							"required": "Please provide a rating."
						}
					}
				]
			},
			"onSubmit": {
				"loadAction": { "url": "/api/submit-feedback" }
			}
		}
	]
}
