# .editorconfig

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

# Use tabs for all files
indent_style = tab
tab_width = 2
trim_trailing_whitespace = true

# Markdown: usually better with spaces
[*.md]
indent_style = space
tab_width = 2
trim_trailing_whitespace = false

# YAML (e.g., GitHub workflows): requires spaces
[*.yml]
indent_style = space
tab_width = 2

[*.yaml]
indent_style = space
tab_width = 2
