{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "clean": "npx nuxi cleanup .",
    "clean:cache": "nuxt clean --cache",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "md2html": "npx ts-node content/md2html.ts",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint --ext .ts,.vue --ignore-path .gitignore .",
    "lint:fix": "eslint --ext .ts,.vue --ignore-path .gitignore . --fix",
    "test": "npx vitest",
    "test:verbose": "npx vitest run --reporter verbose",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:watch:ui": "vitest --watch --ui",
    "deploy": "nuxt generate && nuxt preview",
    "vercel": "nuxt generate && vercel --prod",
    "deploy:vercel": "nuxt generate && vercel --prod",
    "pub": "npx vercel deploy",
    "deploy:vercel:preview": "nuxt generate && vercel --prod --prebuilt",
    "deploy:vercel:dev": "nuxt generate && vercel --prod --prebuilt --env=development",
    "playwright": "npx playwright test --config=playwright.config.ts",
    "playwright:ui": "npx playwright test --ui --config=playwright.config.ts",
    "playwright:debug": "npx playwright test --debug --config=playwright.config.ts",
    "playwright:report": "npx playwright show-report",
    "scss:lint": "stylelint 'public/assets/css/**/*.scss'",
    "scss:build": "sass public/assets/css/main.scss public/assets/css/main.css"
  },
  "dependencies": {
    "@iconify/vue": "^5.0.0",
    "@mdi/font": "^7.4.47",
    "@nuxt/content": "^3.5.1",
    "@nuxt/eslint": "1.4.1",
    "@nuxt/fonts": "0.11.4",
    "@nuxt/icon": "1.13.0",
    "@nuxt/image": "1.10.0",
    "@nuxt/scripts": "0.11.7",
    "@nuxt/ui": "3.1.2",
    "@nuxtjs/i18n": "^9.5.5",
    "@nuxtjs/mdc": "^0.17.0",
    "@unhead/vue": "^2.0.10",
    "eslint": "^9.27.0",
    "lodash": "^4.17.21",
    "monaco-editor": "^0.52.2",
    "nuxt": "^3.17.4",
    "remark-toc": "^9.0.0",
    "typescript": "^5.8.3",
    "vue": "^3.5.14",
    "vue-i18n": "^11.1.5",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@nuxt/test-utils": "^3.19.0",
    "@types/lodash": "^4.17.17",
    "@types/node": "^22.15.21",
    "@vitest/coverage-v8": "^3.1.4",
    "@vitest/ui": "^3.1.4",
    "@vue/test-utils": "^2.4.6",
    "happy-dom": "^17.4.7",
    "jsdom": "^26.1.0",
    "playwright-core": "^1.52.0",
    "remark": "^15.0.1",
    "sass": "^1.89.0",
    "sass-loader": "^16.0.5",
    "to-vfile": "^8.0.0",
    "ts-node": "^10.9.2",
    "unhead": "^2.0.10",
    "vite-plugin-vuetify": "^2.1.1",
    "vitest": "^3.1.4",
    "vuetify": "^3.8.6"
  }
}
